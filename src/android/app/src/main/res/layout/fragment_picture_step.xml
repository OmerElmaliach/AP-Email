<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- main content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <!-- profile picture preview -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="80dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/input_background">

                <ImageView
                    android:id="@+id/iv_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_placeholder"
                    android:background="@color/input_background"
                    android:tint="@color/text_secondary" />

            </androidx.cardview.widget.CardView>

            <!-- choose image button styled like web -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose image"
                android:textColor="@color/text_primary"
                android:backgroundTint="@color/input_background"
                android:layout_marginBottom="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="8dp"
                app:strokeColor="@color/input_border"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- upload hint text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or drag and drop an image here"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- buttons container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textColor="@color/button_secondary_text"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                android:textColor="@color/button_text"
                android:backgroundTint="@color/button_primary"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:enabled="false"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

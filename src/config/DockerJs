FROM node:18

# Install Python for blacklist client
RUN apt-get update && apt-get install -y python3 python3-pip

# Setup files for docker.
WORKDIR /Ap_Email/src/js
RUN npm init -y
RUN npm install express
RUN npm install cors
RUN npm install jsonwebtoken
RUN npm install multer
COPY js/ .


COPY client_socket.py ../
COPY config/ ../config/

# Expose the port for outside connection.
EXPOSE 9000

# Run commands.
CMD ["node", "app.js"]